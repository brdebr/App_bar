<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_toolbar_lista_pedidos"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingStart="12dp"
        app:srcCompat="@drawable/waiter" />

    <TextView
        android:id="@+id/txt_titulo_toolbar_lista_pedidos"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/img_toolbar_lista_pedidos"
        android:gravity="center_vertical"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:text="Lista de Pedidos"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/blanco"
        android:textSize="20sp" />


    <ImageButton
        android:id="@+id/img_btn_menu_lista_ped_refresh"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:padding="3dp"
        android:layout_toStartOf="@+id/img_btn_overflow_lista_pedidos"
        android:background="@color/transparente"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/refresh" />

    <ImageButton
        android:id="@+id/img_btn_overflow_lista_pedidos"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:background="@color/transparente"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/overflow" />

</android.support.percent.PercentRelativeLayout>
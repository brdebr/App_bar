<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/header_categorias"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/img_header_drawer"
        android:cropToPadding="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionados"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:textStyle="bold"
        android:layout_gravity="bottom"
        android:textColor="@color/colorPrincipal"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:layout_alignBottom="@+id/img_header_drawer"
        android:layout_alignParentStart="true"
        android:id="@+id/text_view_categoria_header_drawer"
        android:padding="12dp"
        android:background="@drawable/caja_texto_bordeada"
        android:paddingEnd="18dp"
        android:layout_marginBottom="-3dp"/>

</FrameLayout>
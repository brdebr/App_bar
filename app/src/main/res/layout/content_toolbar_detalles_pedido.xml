<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txt_mesa_detalles_pedido"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingEnd="6dp"
        android:paddingStart="12dp"
        android:gravity="center_vertical"
        android:text="Mesa"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_id_mesa_detalles_pedido"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/txt_mesa_detalles_pedido"
        android:text="#"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:paddingEnd="15dp"
        android:paddingStart="8dp"/>

    <LinearLayout
        android:id="@+id/linear_layout_001_detalles_pedido"
        app:layout_widthPercent="20%"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/txt_id_mesa_detalles_pedido"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/img_users_detalles_pedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/user" />

        <TextView
            android:id="@+id/txt_comensales_detalles_pedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_002_detalles_pedido"
        app:layout_widthPercent="20%"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/linear_layout_001_detalles_pedido"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_platos_estados_detalles_pedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/carta3" />

        <TextView
            android:id="@+id/txt_platos_estados_detalles_pedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#/#"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_003_detalles_pedido"
        app:layout_widthPercent="20%"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/linear_layout_002_detalles_pedido"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_bebidas_estados_detalles_pedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tea" />

        <TextView
            android:id="@+id/txt_bebidas_estados_detalles_pedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="#/#"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textAlignment="center" />

    </LinearLayout>

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="19dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/transparente"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/overflow"
        android:id="@+id/img_btn_overflow_detalles_pedidos" />


</android.support.percent.PercentRelativeLayout>
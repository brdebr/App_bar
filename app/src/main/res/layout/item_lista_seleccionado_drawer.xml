<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/gris_clarito"
    android:id="@+id/relative_layout_item_drawer_categoria"
    android:layout_marginBottom="3dp">

    <TextView
        tools:text="Ensalada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/text_nombre_plato_seleccionado_itemDrawer"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:textAllCaps="false"
        android:fontFamily="sans-serif"
        android:maxWidth="210dp"
        />

    <TextView
        tools:text="25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_cantidad_seleccionado_itemDrawer"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:textAllCaps="false"
        android:fontFamily="sans-serif"
        android:maxWidth="210dp"
        android:layout_alignBaseline="@+id/text_nombre_plato_seleccionado_itemDrawer"
        android:layout_alignBottom="@+id/text_nombre_plato_seleccionado_itemDrawer"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="32dp"
    android:paddingBottom="32dp"
    android:gravity="center">

    <TextView
        app:layout_widthPercent="60%"
        android:layout_height="50dp"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:gravity="center_vertical"
        android:text="Comensales : "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:id="@+id/txt_comensales_dialog_crear_pedido" />

    <EditText
        app:layout_widthPercent="17%"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/edit_comensales_dialog_crear_pedido"
        android:textAlignment="center"
        android:layout_above="@+id/txt_mesa_dialog_crear_pedido"
        android:layout_toEndOf="@+id/txt_comensales_dialog_crear_pedido" />

    <TextView
        app:layout_widthPercent="60%"
        android:layout_height="50dp"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:gravity="center_vertical"
        android:text="Mesa : "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:id="@+id/txt_mesa_dialog_crear_pedido"
        android:layout_below="@+id/txt_comensales_dialog_crear_pedido"
        android:layout_alignStart="@+id/txt_comensales_dialog_crear_pedido" />

    <EditText
        app:layout_widthPercent="17%"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/edit_mesa_dialog_crear_pedido"
        android:layout_below="@+id/txt_comensales_dialog_crear_pedido"
        android:layout_toEndOf="@+id/txt_comensales_dialog_crear_pedido"
        android:textAlignment="center" />

</android.support.percent.PercentRelativeLayout>